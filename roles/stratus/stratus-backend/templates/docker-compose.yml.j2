version: '2'

services:
  stratus_backend:
    image: serhio/stratus_backend
    container_name: stratus_backend
    command: /start.sh
    environment:
      - POSTGRES_USER=stratus
      - USE_DOCKER=yes
    volumes:
      - app:/app
    ports:
      - "5000:5000"
    networks:
      - stratus_default

volumes:
  app: {}

networks:
  stratus_default:
    external: true
